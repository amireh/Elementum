<Animations>
  <AnimationDefinition name="Testing" duration="1" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="1.0" />
      <KeyFrame position="1.0" value="0.0" />
    </Affector>
    <Affector property="YRotation" interpolator="float">
      <KeyFrame position="0.0" value="0" />
      <KeyFrame position="1.0" value="360" />
    </Affector>
    <Subscription event="Shown" action="Start" />
  </AnimationDefinition>

  <AnimationDefinition name="Fade" duration="2" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="0.0" />
      <KeyFrame position="1.0" value="1.0" />
      <KeyFrame position="2.0" value="0.0" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="QuickFadeIn" duration="0.5" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="0.0" />
      <KeyFrame position="0.5" value="1.0" />
    </Affector>
  </AnimationDefinition>
  <AnimationDefinition name="QuickFadeOut" duration="0.5" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="1.0" />
      <KeyFrame position="0.5" value="0.0" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="ShowTooltip" duration="0.5" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="0.0" />
      <KeyFrame position="0.5" value="1.0" />
    </Affector>
  </AnimationDefinition>
  <AnimationDefinition name="HideTooltip" duration="0.5" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="1.0" />
      <KeyFrame position="0.5" value="0.0" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="LongFade" duration="3" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="0.0" />
      <KeyFrame position="1.5" value="1.0" />
      <KeyFrame position="3.0" value="0.0" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="LongFadeOut" duration="3" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="1.0" />
      <KeyFrame position="2.0" value="1.0" />
      <KeyFrame position="3.0" value="0.0" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="MarkForRemoval" duration="2" replayMode="loop">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="1.0" />
      <KeyFrame position="1.0" value="0.1" />
      <KeyFrame position="2.0" value="1.0" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="ScrollUpLeft" duration="2" replayMode="once">
    <Affector property="UnifiedYPosition" interpolator="UDim" applicationMethod="relative">
      <KeyFrame position="0.0" value="{0,0}" />
      <KeyFrame position="1.0" value="{-0.15,0}" progression="quadratic decelerating" />
      <KeyFrame position="2.0" value="{-0.3,0}" />
    </Affector>
<!--
    <Affector property="UnifiedXPosition" interpolator="UDim" applicationMethod="relative">
      <KeyFrame position="0.0" value="{0,0}" />
      <KeyFrame position="1.0" value="{-0.1,0}" progression="quadratic accelerating" />
      <KeyFrame position="2.0" value="{-0.3,0}" />
    </Affector>
-->
    <Affector property="Alpha" interpolator="float" >
      <KeyFrame position="0.0" value="1.0" />
      <KeyFrame position="1.5" value="0.9" />
      <KeyFrame position="2.0" value="0.0" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="ScrollUpRight" duration="2" replayMode="once">
    <Affector property="UnifiedYPosition" interpolator="UDim" applicationMethod="relative">
      <KeyFrame position="0.0" value="{0,0}" />
      <KeyFrame position="1.0" value="{-0.15,0}" progression="quadratic decelerating" />
      <KeyFrame position="2.0" value="{-0.3,0}" />
    </Affector>
<!--
    <Affector property="UnifiedXPosition" interpolator="UDim" applicationMethod="relative">
      <KeyFrame position="0.0" value="{0,0}" />
      <KeyFrame position="1.0" value="{0.1,0}" progression="quadratic accelerating" />
      <KeyFrame position="2.0" value="{0.3,0}" />
    </Affector>
-->
    <Affector property="Alpha" interpolator="float" >
      <KeyFrame position="0.0" value="1.0" />
      <KeyFrame position="1.5" value="0.9" />
      <KeyFrame position="2.0" value="0.0" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="DrawSpell" duration="0.5" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.001" value="0.1" />
      <KeyFrame position="0.5" value="1.0" progression="quadratic decelerating" />
    </Affector>
    <Affector property="UnifiedXPosition" interpolator="UDim" applicationMethod="relative">
      <KeyFrame position="0" value="{1, 0}" />
      <KeyFrame position="0.5" value="{0,0}" progression="quadratic decelerating" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="DropSpell" duration="0.5" replayMode="once">
    <Affector property="Alpha" interpolator="float">
      <KeyFrame position="0.0" value="1.0" />
      <KeyFrame position="0.5" value="0.0" />
    </Affector>
    <Affector property="UnifiedXPosition" interpolator="UDim" applicationMethod="relative">
      <KeyFrame position="0" value="{0, 0}" />
      <KeyFrame position="0.5" value="{-1, 0}" progression="quadratic accelerating" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="MoveToLeftInHand" duration="0.5" replayMode="once">
    <Affector property="UnifiedXPosition" interpolator="UDim" applicationMethod="relative">
      <KeyFrame position="0" value="{0, 0}" />
      <KeyFrame position="0.5" value="{-0.125, 0}" progression="quadratic accelerating" />
    </Affector>
  </AnimationDefinition>

  <AnimationDefinition name="ClickEndTurn" duration="3" replayMode="once">

    <Affector property="ZRotation" interpolator="float">
      <KeyFrame position="0.0" value="360" />
      <KeyFrame position="1.5" value="0"  progression="linear" />
      <KeyFrame position="3" value="-360" progression="linear" />
    </Affector>

  </AnimationDefinition>
</Animations>
